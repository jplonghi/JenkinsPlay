pipeline {
	agent any
	stages{
		
		
		stage('Clone repository') {
			steps{
                checkout scm
			}
		}

		
		
        stage('DEV'){
			when{
				branch 'feature/*'
			}
			
					steps{
						bat "echo Build For DEV ${env.BRANCH_NAME}"
						bat "echo Build in DEV"
					}
		}


		stage('QA'){
			when{
				branch 'QA-SNAPSHOT'
			}
			
					steps{
						bat "echo Build For QA ${env.BRANCH_NAME}"
						bat "echo Build in QA"
					}
		}


		stage('PROD'){
			when{
				branch 'master'
			}
			steps{
				bat "echo Build For Prod ${env.BRANCH_NAME}"
				bat "echo Build in PROD"
			}

		}

				
    }

}